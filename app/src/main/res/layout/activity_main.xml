<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar_card"
        android:id="@+id/toolbarCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:id="@+id/normalUserLayout"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/standard_padding"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/standard_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_padding"
                android:layout_marginTop="@dimen/large_padding"
                android:layout_marginBottom="@dimen/standard_padding"
                android:text="@string/whatDoYouWantToDoToday"
                android:textAppearance="@style/TextAppearance.Custom.Subtitle1"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/bookAppointmentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_padding"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#9C9FE7">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/standard_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/standard_padding"
                        android:layout_toLeftOf="@id/feature_img"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/standard_padding"
                        android:text="@string/bookAppointmentNow"
                        android:textAppearance="@style/TextAppearance.Custom.Headline7"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/feature_img"
                        android:layout_width="100dp"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/doctors_vector" />


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_padding"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@color/colorAccent"
                app:cardBackgroundColor="#FBB562">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/standard_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/standard_padding"
                        android:layout_toLeftOf="@id/feature_img2"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/standard_padding"
                        android:text="@string/bookTeleConsultation"
                        android:textAppearance="@style/TextAppearance.Custom.Headline7"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/feature_img2"
                        android:layout_width="100dp"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/tele_consultation" />


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_padding"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/colorAccent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/standard_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/standard_padding"
                        android:layout_toLeftOf="@id/feature_img3"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/standard_padding"
                        android:text="@string/search_hospitals"
                        android:textAppearance="@style/TextAppearance.Custom.Headline7"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/feature_img3"
                        android:layout_width="100dp"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/search_hospitals" />


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_padding"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#629FFB">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/standard_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/standard_padding"
                        android:layout_toLeftOf="@id/feature_img4"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/standard_padding"
                        android:text="@string/checkLabReports"
                        android:textAppearance="@style/TextAppearance.Custom.Headline7"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/feature_img4"
                        android:layout_width="100dp"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/lab_reports" />


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/standard_padding"
        app:cardElevation="@dimen/standard_padding"
        app:cardBackgroundColor="@color/white"
        android:id="@+id/doctorLayout"
        android:layout_height="match_parent"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/appointmentLayout"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="@string/upcoming_appointments"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/large_padding"
                android:layout_marginLeft="@dimen/large_padding"
                android:layout_marginBottom="@dimen/standard_padding"
                android:textAppearance="@style/TextAppearance.Custom.Subtitle1"
                android:layout_height="wrap_content"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/standard_padding"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="match_parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/appointmentContainer"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/standard_padding">


                    </LinearLayout>


                </ScrollView>


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/organizationHeadLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_padding"
        android:visibility="gone"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/standard_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_padding"
                android:layout_marginTop="@dimen/large_padding"
                android:layout_marginBottom="@dimen/standard_padding"
                android:text="@string/whatDoYouWantToDoToday"
                android:textAppearance="@style/TextAppearance.Custom.Subtitle1"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/checkAppointments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_padding"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#9C9FE7">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/standard_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/standard_padding"
                        android:layout_toLeftOf="@id/appointmentImage"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/standard_padding"
                        android:text="@string/check_appointments"
                        android:textAppearance="@style/TextAppearance.Custom.Headline7"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/appointmentImage"
                        android:layout_width="100dp"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/doctors_vector" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/standard_padding"
                android:id="@+id/manage_departments"
                android:foreground="@color/colorAccent"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#FBB562"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/standard_padding"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_toLeftOf="@id/manage_departments_image"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/standard_padding"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/standard_padding"
                        android:gravity="center_vertical"
                        android:text="@string/manage_departments"
                        android:textAppearance="@style/TextAppearance.Custom.Headline7"
                        android:layout_height="@dimen/feature_card_height"/>

                    <ImageView
                        android:layout_width="100dp"
                        android:id="@+id/manage_departments_image"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/tele_consultation" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/standard_padding"
                android:foreground="@color/colorAccent"
                app:cardBackgroundColor="#FBB562"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/standard_padding"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_toLeftOf="@id/newsImageOrganization"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/standard_padding"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/standard_padding"
                        android:gravity="center_vertical"
                        android:text="@string/add_news"
                        android:textAppearance="@style/TextAppearance.Custom.Headline7"
                        android:layout_height="@dimen/feature_card_height"/>

                    <ImageView
                        android:layout_width="100dp"
                        android:id="@+id/newsImageOrganization"
                        android:layout_height="@dimen/feature_card_height"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/tele_consultation" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>